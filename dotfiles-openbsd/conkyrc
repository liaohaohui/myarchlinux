${color slate grey}${alignr}${color}${execi 5 top -n 1 | grep "Mem" | awk '{print $3}' | cut -d / -f 1} ($memperc% $mem/$memmax)
${alignc}${membar 3,160}
${color slate grey}SWAP: ${alignr}${color}$swapperc% $swap/$swapmax
${alignc}${swapbar 3,160}
