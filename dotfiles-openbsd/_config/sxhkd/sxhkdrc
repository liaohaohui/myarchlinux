#
# wm independent hotkeys
#

# terminal emulator
super + Return
	xterm
	#urxvt
	#xfce4-terminal

# program launcher
#super + @space
#	dmenu_run
super + x
	dmenu_run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# lockscreen: super + l 	betterlockscreen -l dimblur

#
# bspwm hotkeys
#

# quit bspwm normally
super + {_,shift + }q
	bspc quit

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the `other' node
super + g
	bspc node -s last # biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + Left
	bspc node -f west
super + Down
	bspc node -f south
super + Up
	bspc node -f north
super + Right
	bspc node -f east

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'
F1
	bspc desktop -f 1
#ctrl + F2
ctrl + F2
	bspc desktop -f 2
ctrl + F3
	bspc desktop -f 3
ctrl + F4
	bspc desktop -f 4

super + shift + s
	bspc node -s last

#
# preselect
#

# preselect the direction
#super + ctrl + {h,j,k,l}
#	bspc node -p {west,south,north,east}
super + alt + Up
	bspc node -p north
super + alt + Down
	bspc node -p south
super + alt + shift + Left
	bspc node -p west
super + alt + shift + Right
	bspc node -p east

# cancel the preselection for the focused node
super + alt + space
	bspc node -p cancel

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
#super + alt + {h,j,k,l}
#	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
super + ctrl + Left
	bspc node -z left -20 0
super + ctrl + Down
	bspc node -z bottom 0 20
super + ctrl + Up
	bspc node -z top 0 -20
super + ctrl + Right
	bspc node -z right 20 0

# contract a window by moving one of its side inward
#super + alt + shift + {h,j,k,l}
super + ctrl + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {_,shift + }Left
	bspc node -v -20 0
super + {_,shift + }Down
	bspc node -v 0 20
super + {_,shift + }Up
	bspc node -v 0 -20
super + {_,shift + }Right
	bspc node -v 20 0

super + alt + Left
	bspc node -n west

super + alt + Right
	bspc node -n east

#super + {Left,Down,Up,Right}
#	bspc node -v {-20 0,0 20,0 -20,20 0}

alt + button1
	bspc pointer --grab move

alt + @button1
	bspc pointer --ungrab

# https://bbs.archlinux.org/viewtopic.php?id=155613&p=2
XF86Audio{Raise,Lower}Volume
    amixer sset Master {2+,2-} unmute

